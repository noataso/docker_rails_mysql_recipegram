<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ユーザー編集
      </h1>
    </div>
  </div>
</section>

<%= form_for @user do |f| %>

<div class="field">
    <%= f.label :username,class:"label" %>
    <%= f.text_field :username,class:"input" %>
</div>
<div class="field">
    <%= f.label :email,class:"label" %>
    <%= f.email_field :email,class:"input" %>
</div>
<div class="field">
    <%= f.label :profile,class:"label" %>
    <%= f.text_area :profile,class:"textarea" %>
</div>
<div class="field">
    <%= f.label :profile_image,class:"label" %>
    <%= f.attachment_field :profile_image,class:"input" %>
</div>
<%= f.submit "更新",class:"button is-success" %>

<% end %>